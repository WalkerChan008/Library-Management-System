/* pages/rate/rate.wxss */
page {
  width: 100vw;
  background-color: #f6f6f6;
}

.page {
  margin: 20rpx;
  background: #fff;
}

.book-info {
  display: flex;
  position: relative;
  padding: 20rpx;
  border-bottom: 10rpx solid #f6f6f6;
  box-sizing: border-box;
}
.book-img {
  width: 154rpx;
  max-width: 27%;
  height: 216rpx;
  background: red;
}
.book-cont {
  display: flex;
  position: relative;
  flex-flow: column nowrap;
  margin-left: 30rpx;
  width: 70%;
}
.book-cont .book-title {
  margin-bottom: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #424242;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.book-info .book-cont .date {
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 30rpx;
  color: #aaa;
}

.rate-wrap {
  display: flex;
  padding: 20rpx;
  border-bottom: 10rpx solid #f6f6f6;
}
.rate-wrap text {
  color: #b2b2b2;
}
.rate-star {
  position: relative;
  width: 320rpx;
  height: 60rpx;
}
.star-image {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  src: "../../images/normal.png";
}
.item {
  position: absolute;
  top: 0rpx;
  width: 30rpx;
  height: 60rpx;
}

.rate-cont {
  padding: 20rpx;
  border-bottom: 20rpx solid #f6f6f6;
}