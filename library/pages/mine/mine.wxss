/* pages/mine/mine.wxss */
.avatar-wrapper {
  background: #1b82d1;
  padding: 25px 0;
}

.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar-wrapper .avatar>view {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-wrapper .avatar>view>image {
  width: 160rpx;
  height: 160rpx;
}

.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}

.avatar-wrapper .text image {
  width: 100rpx;
}

.weui-cell__hd image {
  margin-right: 5px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}

.weui-badge {
  vertical-align: 1px;
}

.weui-cells::after{
  content: none;
  border-bottom: none;
}

.weui-cells::before{
  border-top: none;
}