/* pages/books_list/index.wxss */
.container {
  
}

.list-count {
  padding: 10rpx;
  font-size: 28rpx;
  color: #aaa;
  /* border: 1px solid #000; */
}

.list-count text {
  color: #424242;
}

.list-wrap {
}

.list-item {
  display: flex;
  position: relative;
  padding: 20rpx 20rpx 30rpx;
  /* border: 1px solid #000; */
  border-top: 10rpx solid #eee;
  box-sizing: border-box;
}

.list-item .book-img,
.list-item cover-view {
  width: 192rpx;
  max-width: 27%;
  height: 270rpx;
}
.list-item .book-img {
  background-size: contain;
}

.list-item cover-view {
  display: flex;
  position: absolute;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  background-color: rgba(0, 0, 0, 0.3);
}

.list-item .book-cont {
  display: flex;
  flex-flow: column nowrap;
  margin-left: 15rpx;
  width: 70%;
}
.list-item .book-cont .book-title {
  margin-bottom: 17rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #424242;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-item .book-cont .book-author {
  padding-bottom: 10rpx;
  font-size: 32rpx;
  color: #424242;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-item .book-cont .book-summary {
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  padding-top: 10rpx;
  font-size: 30rpx;
  color: #aaa;
}