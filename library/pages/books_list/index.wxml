<!--pages/books_list/index.wxml-->
<view class="container">

  <view class="list-count">
    为您找到相关结果<text> {{list_count}} </text>条
  </view>

  <view class="list-wrap">
    <block wx:for="{{b_list}}" wx:key="*this">
      <navigator url="../books_info/index?code_type=isbn&result={{ item.isbn }}">
        <view class="list-item">
          <image class="book-img" src="{{ item.images.large || item.image }}"></image>
          <cover-view wx:if="{{ !item.callno }}">111</cover-view>
          <view class="book-cont">
            <text class="book-title">{{ item.title }}</text>
            <text class="book-author" wx:for="{{ item.author }}" wx:key="*this">{{ item }}</text>
            <text class="book-summary">{{ item.summary }}</text>
          </view>
        </view>
      </navigator>
    </block>
  </view>

</view>