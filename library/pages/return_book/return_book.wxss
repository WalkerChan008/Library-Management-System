/* pages/return_book/return_book.wxss */
.page {
  min-height: 100vh;
  background-color: #f6f6f6;
}

.list-count {
  padding: 10rpx;
  font-size: 28rpx;
  color: #aaa;
  background-color: #fff;
  /* border: 1px solid #000; */
}

.list-count text {
  font-weight: bold;
  color: #1b82d1;
}

.line {
  height: 30rpx;
}
.btm-line {
  height: 1px;
}
.list-wrap {
}

.list-item {
  display: flex;
  flex-direction: column;
  margin: 30rpx 20rpx;
  background-color: #fff;
}

.list-item:first-of-type {
  margin-top: 0 !important;
}
.book-info {
  display: flex;
  position: relative;
  padding: 20rpx;
  box-sizing: border-box;
}


.book-info .book-img {
  width: 154rpx;
  max-width: 27%;
  height: 216rpx;
}

.book-info .book-cont {
  display: flex;
  position: relative;
  flex-flow: column nowrap;
  margin-left: 30rpx;
  width: 70%;
}
.book-info .book-cont .book-title {
  margin-bottom: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #424242;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.book-info .book-cont .date {
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 30rpx;
  color: #aaa;
}

.rate {
  /* display: absolute; */
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
  border-top: 2px solid #f6f6f6;
}
.like,
.dislike {
  padding: 5rpx 0rpx;
  width: 140rpx;
  border: 1px solid #cdcdcd;
  border-radius: 10px;
  text-align: center;
}
.like {
  border: 1px solid #1b82d1;
}
.like text,
.dislike text {
  font-size: 28rpx;
  color: #cdcdcd;
}
.like image,
.dislike image {
  width: 48rpx;
  height: 48rpx;
}
.like image {
  vertical-align: -12rpx;
}
.dislike image {
  vertical-align: -14rpx;
}

.hover-rate {
  /* background-color: #f6f6f6; */
  background-color: #ddd;
}

.text-blue {
  color: #1b82d1 !important;
}