/* pages/books_hot/hot.wxss */
.container {
  position: relative;
}

.three-point {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.picker {
  position: absolute;
  top: 5px;
  left: 50%; 
  padding: 5px 10px;
  transform: translateX(-50%); 
  border: 1px solid #fff;
  border-radius: 5px;
  font-size: 24rpx;
  color: #1b82d1;
  background-color: #f6f6f6;
}
.picker .cur-value {
  font-weight: 700;
  font-size: 28rpx;
  /* color: #fff; */
}

/* 排行榜1 */
.hot-head {
  padding: 50px 20px 0;
  color: #fff;
  background-color: #1b82d1;
  /* border-bottom: 1px solid #ccc; */
  box-shadow: 0 0 20px 1px #1b82d1;
  /* height: 200rpx; */
}
.hot-head .hot-title {
  font-weight: bold;
  text-align: center;
  font-size: 36rpx;
}
.weui-flex {
  padding: 10px 20px 20px;
  text-align: center;
  vertical-align: 10px;
}
.weui-flex .hot-des {
  display: flex;
  align-items: flex-end;
}
.weui-flex .hot-des .number1 {
  font-size: 40rpx;
  font-weight: bold;
}
.weui-flex__item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: center;
}
.weui-flex__item .hot-book-img {
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  border-radius: 50%;
  overflow: hidden;
}

/* 排行榜2-10 */
.hot-body {
  padding: 10px 0 20px;
}
.rank-list {
  display: flex;
  padding: 15px 20px;
  border-bottom: 1px solid #ccc;
}
.hot-body navigator:last-of-type .rank-list {
  border: none;
} 

.rank-num,
.rank-title,
.rank-like {
  display: flex;
  align-items: center;
}
.rank-num {
  padding-right: 20px;
  font-size: 32rpx;
  font-weight: bold;
}
.rank-img {
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  background-color: #fff;
  border-radius: 50%;
  overflow: hidden;
}
.rank-title {
  padding-left: 10px;
  width: 400rpx;
   box-sizing: border-box; 
}
.rank-like {
  flex: 1;
  justify-content: flex-end;
  min-width: 90rpx;
}