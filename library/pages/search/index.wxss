.container {
  width: 100%;
  height: 100vh;
  background-color: #fff;
}
.search {
  position: relative;
  padding: 16rpx 20rpx;
  background-color: #eee;
  border-top: 1px solid #aaa;
  border-bottom: 1px solid #aaa;
}
.search .search-icon {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  z-index: 2;
}
.search .search-scan {
  position: absolute;
  top: 33rpx;
  right: 40rpx;
  padding-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}
.search input {
  padding: 8rpx 60rpx;
  background-color: #fff;
  font-size: 28rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.search .plhd {
  color: #aaa;
  font-size: 28rpx;
}