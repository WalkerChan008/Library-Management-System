.container {
  width: 100%;
  height: 100vh;
  /* background: url('http://localhost/images/bg.png') no-repeat; */
  background-color: #fefefe;
}
.logo {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 35vh;
}
.logo image {
  width: 588rpx;
  height: 96rpx;
}
.wrap-search {
  display: flex;
  justify-content: center;
  /* align-items: center; */
  height: 12vh;
}
.search {
  display: flex;
  align-items: center;
  justify-content: space-around;
  /* padding: 10rpx 20rpx; */
  padding: 0 20rpx;
  width: 500rpx;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 15px;
  box-shadow: 0 0 1px 1px #d8d8d8;
  background-color: #fff;
}
.search .search-icon {
  /* flex-grow: 1; */
  padding-right: 10rpx;
}
.search .clear-icon {
  padding: 20rpx;
}
.search .search-scan {
  /* flex-grow: 1; */
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.search input {
  flex-grow: 1;
  font-size: 28rpx;
}
.search .plhd {
  color: #aaa;
  font-size: 28rpx;
}

/* 消息滚动 start */
.wrap-swiper {
  display: flex;
  justify-content: center;
}
.swiper_container {
  height: 55rpx;
  width: 72vw;
}
.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}
/* 消息滚动 end */

.read-img {
  display: flex;
  justify-content: center;
  align-items: center;
}
.read-img image {
  width: 640rpx;
  height: 480rpx;
}