/* pages/loan_book/loan_book.wxss */
.page {
  height: 100vh;
  background-color: #f6f6f6;
}
.list-count {
  padding: 10rpx;
  font-size: 28rpx;
  color: #aaa;
  background-color: #fff;
  /* border: 1px solid #000; */
}
.list-count text {
  font-weight: bold;
  color: #1b82d1;
}

.line {
  height: 30rpx;
}
.list-wrap {
}

.list-item {
  display: flex;
  position: relative;
  margin: 30rpx 20rpx;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.list-item:first-of-type {
  margin-top: 0 !important;
}

.list-item .book-img {
  width: 154rpx;
  max-width: 27%;
  height: 216rpx;
  background: url('https://img3.doubanio.com/lpic/s11117924.jpg') no-repeat; 
  background-size: contain;
}

.list-item .book-cont {
  display: flex;
  position: relative;
  flex-flow: column nowrap;
  margin-left: 30rpx;
  width: 70%;
}
.list-item .book-cont .book-title {
  margin-bottom: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #424242;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-item .book-cont .date {
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 30rpx;
  color: #aaa;
}
.ret-btn {
  position: absolute;
  right: -10rpx;
  bottom: 10rpx;
}