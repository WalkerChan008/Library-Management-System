/* pages/books_info/index.wxss */
.book-img {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center; 
  height: 450rpx;
}
.book-img .stats {
  position: absolute;
  top: 60rpx;
  left: 40rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #fff;
  background: #999;
}
.book-img image {
  width: 250rpx; 
  height: 330rpx;
}

.book-box {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  border-bottom: 6rpx solid #eee;
}
.book-box:nth-last-of-type(2) {
  border: none;
}
.box-title {
  height: 100rpx;
  font-size: 46rpx;
  color: #424242;
}
.box-cont {
  display: flex;
  font-size: 26rpx;
  color: #aaa;
}
.box-cont .cont-info {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  max-width: 490rpx;
}
.box-cont .cont-info text {
  padding-bottom: 6rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.box-cont .cont-like {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #ddd;
}

.box-btn {
  position: fixed;
  display: flex;
  justify-content: space-around;
  bottom: 0;
  width: 100vw;
  max-height: 100rpx;
  background-color: #fff;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
}
.box-btn .favor,
.box-btn .share {
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
   align-items: center;
   padding: 8rpx 0;   
  width: 50vw;
  box-sizing: border-box;
}
.box-btn .favor {
  border-right: 1px solid #ccc;
}
.box-btn .share {
  position: relative;
}
.box-btn .favor image,
.box-btn .share image {
  width: 48rpx;
  height: 48rpx;
}
.box-btn .favor text,
.box-btn .share text {
  font-size: 24rpx;
}
.box-btn .favor text {
  color: #d81e06;
}
.box-btn .share text {
  color: #1b82d1;
}
.box-btn .share button {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: transparent;
}
.box-btn .share button::after {
   border: none; 
}



/* 简介 */
.box-title {
  height: 80rpx;
  font-size:32rpx;
  font-weight: bold;
  color: #000;
}
.brief-cont {
  word-break: break-all;
  font-size: 30rpx;
  text-indent: 2em;
  color: #000;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.fold {
  -webkit-line-clamp: 5;
  overflow: hidden;
}
.hide {
  display: none;
}
.icon-wrap {
  display: flex;
  justify-content: center;
}
.icon-arrow {
  width: 48rpx;
}

