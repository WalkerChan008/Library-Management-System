/* pages/myfavor/myfavor.wxss */

.page {
  min-height: 100vh;
  background-color: #f6f6f6;
}

.list-count {
  padding: 10rpx;
  font-size: 28rpx;
  color: #aaa;
  background-color: #fff;
  /* border: 1px solid #000; */
}

.list-count text {
  font-weight: bold;
  color: #1b82d1;
}

.line {
  height: 30rpx;
}
.btm-line {
  height: 1px;
}

.list-wrap {
}

.list-item {
  display: flex;
  flex-direction: column;
  margin: 30rpx 20rpx;
  background-color: #fff;
}

.list-item:first-of-type {
  margin-top: 0 !important;
}

.book-info {
  display: flex;
  position: relative;
  padding: 20rpx;
  box-sizing: border-box;
}

.book-info .book-img {
  width: 220rpx;
  max-width: 220rpx;
  height: 280rpx;
}

.book-info .book-img image {
  width: 220rpx;
  height: 280rpx;
}

.book-info .book-cont {
  display: flex;
  position: relative;
  flex-flow: column nowrap;
  margin-left: 20rpx;
  width: 70%;
}

.book-info .book-cont .book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #424242;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.book-info .book-cont .date {
  /* display: -webkit-box; */
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 24rpx;
  color: #aaa;
}

.cancel-btn {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
}

.cancel-btn button {
  font-size: 24rpx;
}
